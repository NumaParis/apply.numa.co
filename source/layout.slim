doctype 5
html lang=I18n.locale.to_s itemscope="itemscope" itemtype="http://schema.org/WebSite"
  head
    / = partial "meta"
    title
      - if current_article
        = "#{emojify current_article.title, :raw} - "
      - elsif current_page && current_page.data.title
        = "#{emojify current_page.data.title} - "
      - elsif content_for?(:title)
        = "#{emojify yield_content(:title)} - "
      = t 'blog.title'
    link rel='author' href='http://www.twitter.com/nedzen'
    link rel="alternate" hreflang=alt_lang href="http://#{alt_host}#{ current_resource.url }"
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    - %w{152 144 120 114 76 72 60 67}.each do |size|
      - size = "#{size}x#{size}"
      / link rel="apple-touch-icon" size=size href="/apple-touch-icon-#{size}-precomposed.png"
      / link rel="apple-touch-icon" href="/apple-touch-icon-precomposed.png"
    link rel="shortcut icon" href="/favicon.png"
    link rel="icon" type="image/ico" href="/favicon.ico"

    - if current_article
      - if current_article.previous_article
        link rel="prev" href=current_article.previous_article.url
      - if current_article.next_article
        link rel="next" href=current_article.next_article.url
    - elsif paginate
      - if prev_page
        link rel="prev" href=prev_page.url
      - if next_page
        link rel="next" href=next_page.url
  
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
  
  body data-spy="scroll" data-target="#mainnav"
    / bootstrap 3 compatible
    nav.navbar.navbar-fixed-top#mainnav itemscope="itemscope" itemtype="http://www.search_sitema.org/SiteNavigationElement"
      .container
        .navbar-header
          button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          =link_to config.site_url, :class => 'logo'
            =image_tag('logo_numa.svg', :alt => 'NUMA', :class => 'logo')
        .collapse.navbar-collapse
          = link_to 'Apply Now', 'https://www.f6s.com/numaparis', :class => 'btn btn-apply pull-right', :target=> '_blank'
          ul.nav.navbar-nav.pull-right
            li= link_to 'Accelerator', '#accelerator'
            li= link_to 'Wanted', '#wanted'
            li= link_to 'Program', '#program'
            li= link_to 'Team', '#team'
            li= link_to 'Portfolio', '#success'
            li= link_to 'Faq', '#faq'
            li= link_to 'How To Apply', '#faq'
            / li= link_to 'Apply Now', 'https://www.f6s.com/', :class => 'btn-apply'
    
    .container
      / .row
      /   .content
      /     - if content_for? :main
      /       == yield_content :main
      /     - else
      /       main role='main'
      /         == yield
      section.intro
        .in
          div
            .heading
              h1 =data.numa['intro'].find{ |p| p.name == 'heading' }.content
              p =data.numa['intro'].find{ |p| p.name == 'subheading' }.content
              span =link_to '&nbsp;', '#playvid', :class => 'btn play-vid'
      
      .content
        section#accelerator
          .col-sm-12.col-md-7.col-lg-8
            h2 =data.numa['accelerator'].find{ |p| p.name == 'heading' }.content
            p =data.numa['accelerator'].find{ |p| p.name == 'paragraph' }.content
          
          .col-sm-12.col-md-5.col-lg-4
            ul.agenda
              li Agenda
              -data.numa['intro'].each do |row|
                li
                  = row['agenda']
              li
                =link_to 'Apply Now', "https://www.f6s.com/numaparis", :class => 'btn btn-lg btn-apply', :target=> '_blank'
          
          ul.metrics.clearfix
            -data.numa['accelerator'].each do |row|
              li.col-sm-3
                = row['trackrecord']
        
        section#wanted
          .col-sm-12
            h2 =data.numa['wanted'].find{ |p| p.name == 'heading' }.content
            p =data.numa['wanted'].find{ |p| p.name == 'paragraph' }.content
          ul.wanted
            -data.numa['wanted'].each do |row|
              li.col-sm-3
                =row['criteria']? row['criteria'] : ""

        section#program
          .col-sm-8
            h2 =data.numa['program'].find{ |p| p.name == 'heading' }.content
            p =data.numa['program'].find{ |p| p.name == 'paragraph' }.content
          
        .this.clearfix
          ul
            -data.numa['program'].each do |row|
              - if row['keypoints'] != nil
                li
                  =row['keypoints']
        
        .perks.clearfix  
          h2.text-center Perks
          ul
            / li =image_tag('images/Bankin.png')
            li =image_tag('images/Breaz.png')
            li =image_tag('images/Google_Startup_Pack.png')
            li =image_tag('images/Mailjet.png')
            li =image_tag('images/Stripe.jpeg')
            li =image_tag('images/Zendesk.png')
            li =image_tag('images/aircall.png')
            li =image_tag('images/algolia.png')
            li =image_tag('images/amazon-web-services.png')
            /li =image_tag('images/digital ocean.png')
            li =image_tag('images/evernote.jpg')
            li =image_tag('images/fotolia.jpg')
            li =image_tag('images/front.png')
            li =image_tag('images/mention.png')
            li =image_tag('images/paypal-startup-blueprint.png')
            li =image_tag('images/textmaster.png')

        .col-sm-12
          h3 Program Timeline
        
        ul.step.one.col-sm-4
          - data.numa['program'].each do |row|
            - if row['one'] != nil
              li
                = row['one']
        ul.step.two.col-sm-4
          -data.numa['program'].each do |row|
            - if row['two'] != nil
              li
                =row['two']
        ul.step.three.col-sm-4
          -data.numa['program'].each do |row|
            - if row['three'] != nil
              li
                =row['three']

        section#team
          .col-sm-12
            h2 =data.numa['team'].find{ |p| p.title == 'heading' }.content
            p =data.numa['team'].find{ |p| p.title == 'paragraph' }.content
          
          ul.people
            -data.numa['team'].each do |row|
              li.col-sm-2
                .photo
                  = image_tag "#{row['photo']}", :alt=> "#{row['name']}"
                  span.linkedin
                    = link_to '&nbsp;', "#{row['linkedin']}", :target=> '_blank'
                strong
                  = row['name']
                  em
                    = row['role']
                span.twitter
                  = link_to (row['twitter']? row['twitter'] : ""), "http://twitter.com/#{row['twitter']}"
        
        section#mentors
          .col-sm-12
            h2 =data.numa['mentors'].find{ |p| p.title == 'heading' }.content
            p =data.numa['mentors'].find{ |p| p.title == 'paragraph' }.content
          
          ul.people
            -data.numa['mentors'].each do |row|
              li.col-sm-2
                .photo
                  = image_tag "#{row['photo']}", :alt=> "#{row['name']}"
                  span.linkedin
                    = link_to '&nbsp;', "#{row['linkedin']}", :target=> '_blank'
                
                strong.name
                  = row['name']
                  em
                    = row['role']
                span.twitter
                  = link_to (row['twitter']? row['twitter'] : ""), "http://twitter.com/#{row['twitter']}"
        
        section#global
          .col-sm-12
            h2 =data.numa['global'].find{ |p| p.name == 'heading' }.content
            p =data.numa['global'].find{ |p| p.name == 'paragraph' }.content

        section#success
          .col-sm-12
            h2 =data.numa['stories'].find{ |p| p.title == 'heading' }.content
            /p =data.numa['stories'].find{ |p| p.name == 'paragraph' }.content
          
          ul.stories
            -data.numa['stories'].each do |row|
              li.col-sm-4
                .photo
                  = image_tag "#{row['picture']}", :alt=>"#{row['name']}"
                h4.name
                  = row['name']
                em.role
                  = row['role']
                p
                  = row['story']
        section
          ul#partners
            li =image_tag('logo_orange.png')
            li =image_tag('logo_bnp.png')
            li =image_tag('logo_atelier.png')
            li =image_tag('logo_google.png')
            li =image_tag('logo_cisco.png')
            li =image_tag('logo_sncf.png')
        / section.partners

        /sidebar
          / .recent.box
          /   h3= t :recent_entries
          /   ul
          /     - blog.articles.select {|a| a.data[:public] }.sort { |x,y| y.date <=> x.date }[0...10].each do |article|
          /       li
          /         =link_to article do
          /           =emojify article.title
          /           time.date= article.date.strftime('%Y/%m/%d')
          /     li.show-all
          /       = link_to '/archives' do
          /         = t(:show_all)

            
          / h3= t :monthly
          / ul.tags
